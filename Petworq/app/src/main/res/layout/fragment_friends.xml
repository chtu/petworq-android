<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.petworq.androidapp.ContentFragments.FriendsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragment_inner_toolbar_container_for_friends"
            android:name="com.petworq.androidapp.FragmentContainers.ContentContainers.InnerToolbarContainerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <fragment
            android:id="@+id/fragment_inner_content_container_for_friends"
            android:name="com.petworq.androidapp.FragmentContainers.ContentContainers.InnerContentContainerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
